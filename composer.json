{
	"name": "julianchz/alegra-sdk-php",
	"description": "Unofficial PHP SDK for Alegra",
	"type": "library",
	"license": "MIT",
	"homepage": "https://developer.alegra.com/docs/empiezar-con-api-alegra",
	"keywords": [
		"alegra",
		"sdk",
		"php"
	],
	"authors": [
		{
			"name": "Julian Andres Chilito",
			"email": "julian.chilitoz@gmail.com"
		}
	],
	"require": {
		"php": ">=5.6",
		"ext-curl": "*",
		"ext-json": "*",
		"ext-openssl": "*",
		"ext-mbstring": "*",
		"guzzlehttp/guzzle": "^7.4"
	},
	"autoload": {
		"psr-4": {
			"Alegra\\SDK\\": "src/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"Alegra\\SDK\\Tests\\": "tests/"
		}
	},
	"require-dev": {
		"phpunit/phpunit": "^9.5"
	}
}
